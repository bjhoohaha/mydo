<% task_parameter.each_with_index do |t,index| %>
  <% @update_status = t.status %>
  <div class = "row" style = "background-color:<%= t.color%>">
      <div class = "col-sm-1">
      </div>
      <div class = "col-sm-2">
            <%= t.title %>
      </div>
      <div class = "col-sm-3">
            <%= t.description %>
      </div>
      <div class = "col-sm-1">
        <center>
            <% unless t.due_date.blank? %>
            <%= (t.due_date - Date.today).numerator %>
            <% end %>
        </center>
      </div>
      <div class = "col-sm-2">
            <%= link_to bookmark_task_tasks_path(:id => t.id),
                class:"bookmark", method: :patch, remote:true do%>
                <span class = "glyphicon glyphicon-tag"></span>
            <% end %>
            <div class = "status-show">
                <%= t.status %>
            </div>
      </div>
      <div class= "col-sm-1">
            <div class = "update-button">
                <% if @update_status == "In Progress" %>
                  <div class = "awaiting-reply-button">
                    <%= button_to "Awaiting Reply",
                        {
                            :controller => "tasks",
                            :action => "update_status",
                            :id => t.id,

                        }, method: :patch, remote:true%>
                  </div>
                  <div class = "pending-button", style = "display:none">
                    <%= button_to "Pending",
                        {
                            :controller => "tasks",
                            :action => "update_status",
                            :id => t.id,

                            }, method: :patch, remote:true%>
                  </div>
                <% elsif @update_status == "Awaiting Reply" %>
                  <div class = "pending-button">
                    <%= button_to "Pending",
                        {
                            :controller => "tasks",
                            :action => "update_status",
                            :id => t.id,

                            }, method: :patch, remote:true%>
                  </div>
                <% end %>
            </div>
      </div>
      <div class= "col-sm-1">
            <% if @update_status != "Completed" %>
                <div class = "complete-button">
                    <%= button_to "Completed",
                        {
                            :controller => "tasks",
                            :action => "complete_task",
                            :id => t.id,

                        }, method: :patch, remote:true%>
                </div>
            <% end %>
      </div>
      <div class = "col-sm-1">
            <center>
                <%= link_to edit_task_path(t), class: "link-edit" do %>
                    <span class="glyphicon glyphicon-pencil"></span>
                <% end %>
                <%= link_to t, class:"link-delete", remote: true, method: :delete do %>
                    <span class="glyphicon glyphicon-trash"></span>
                <% end %>
            </center>
      </div>
  </div>
<% end %>
