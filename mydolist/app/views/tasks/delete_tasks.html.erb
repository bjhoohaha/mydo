<%= render 'header' %>
<br>
</br>
<h1> All Tasks </h1>
<br>
</br>
<div id = "no-checkbox-error">
  <% if @error %>
    <%= render 'alert', div: 'alert alert-danger', strong:"Error: ", message: "No tasks selected" %>
    <% end %>
</div>
<%= form_tag destroy_multiple_tasks_path, method: :delete do %>
<div id = "all-task">
  <div id = "in-progress">
    <%= render "table", task_parameter: @task_inprogress, del:true %>
  </div>
  <div id = "awaiting-reply">
    <%= render "table", task_parameter: @task_awaitingreply, del:true %>
  </div>
  <div id = "pending">
    <%= render "table", task_parameter: @task_pending, del:true%>
  </div>
  <div id = "completed">
    <%= render "table", task_parameter: @task_completed, del:true %>
  </div>
</div>

<div class = "col-sm-11">
</div>
<div class = "col-sm-1">
<br>
</br>
<%= submit_tag "Delete Tasks" %>
</div>
<% end %>
