<%= render 'header' %>
<br>
</br>
<h1> All Tasks </h1>
<div class = col-sm-11 >
</div>
<div class= col-sm-1>
  <%= link_to"Delete Tasks", {
    :controller => "tasks",
    :action => "delete_tasks"
  }, method: :get %>
</div>
<br>
</br>
<div id = "all-task" >
  <div id = "in-progress">
    <%= render "table", task_parameter: @task_inprogress, sortable: false , del: false %>
  </div>
  <div id = "awaiting-reply">
    <%= render "table", task_parameter: @task_awaitingreply, sortable: false , del: false %>
  </div>
  <div id = "pending">
    <%= render "table", task_parameter: @task_pending, sortable: false, del: false %>
  </div>
  <div id = "completed">
    <%= render "table", task_parameter: @task_completed, sortable: false, del: false %>
  </div>
</div>
